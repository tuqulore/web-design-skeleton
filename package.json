{
  "name": "website-boilerplate",
  "description": "a boilerplate of website provided with npm scripts",
  "version": "1.0.0",
  "author": "tuqulore inc.",
  "bugs": {
    "url": "https://github.com/tuqulore/website-boilerplate/issues"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.2.0",
    "autoprefixer": "^10.0.1",
    "browser-sync": "^2.26.12",
    "cssnano": "^4.1.10",
    "eslint": "^7.8.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "imagemin-cli": "^6.0.0",
    "npm-watch": "^0.7.0",
    "nunjucks-cli": "^1.0.0",
    "postcss": "^8.1.0",
    "postcss-cli": "^8.1.0",
    "sass": "^1.26.10",
    "stylelint": "^13.7.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "tailwindcss": "^1.8.4"
  },
  "homepage": "https://github.com/tuqulore/website-boilerplate#readme",
  "keywords": [
    "website"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tuqulore/website-boilerplate.git"
  },
  "scripts": {
    "build": "export NODE_ENV=production; rm -r dist/*; yarn build:image; yarn build:script; yarn build:style; yarn build:template",
    "build:image": "imagemin src/image/** --out-dir=dist/image",
    "build:script": "cp -r src/script dist",
    "build:style": "sass --style expanded --no-source-map src/style/:.cache/style; postcss .cache/style/** --dir dist/style",
    "build:template": "nunjucks **/*.njk --path src/template --out dist",
    "serve": "npm-watch & browser-sync dist --watch"
  },
  "watch": {
    "build:image": {
      "patterns": [
        "src/image"
      ],
      "extensions": "gif,jpg,jpeg,png,svg"
    },
    "build:script": {
      "patterns": [
        "src/script"
      ],
      "extensions": "js"
    },
    "build:style": {
      "patterns": [
        "src/style"
      ],
      "extensions": "scss"
    },
    "build:template": {
      "patterns": [
        "src/template"
      ],
      "extensions": "njk"
    }
  }
}
